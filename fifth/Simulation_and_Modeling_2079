<td id="cell1"><span class="s1">O</span><span class="s2">b</span><span class="s1">s</span><span class="s2">e</span><span class="s2">r</span><span class="s1">v</span><span class="s2">e</span><span class="s1">d</span> <span class="s2">F</span><span class="s2">r</span><span class="s2">e</span><span class="s2">qu</span><span class="s2">e</span><span class="s2">n</span><span class="s2">c</span><span class="s1">y(O</span><span class="s4">i</span><span class="s1">)</span></td>
<td id="cell2"><span class="s2">E</span><span class="s1">x</span><span class="s2">p</span><span class="s2">ec</span><span class="s1">t</span><span class="s2">e</span><span class="s1">d</span> <span class="s2">F</span><span class="s2">r</span><span class="s2">e</span><span class="s2">qu</span><span class="s2">e</span><span class="s2">n</span><span class="s2">c</span><span class="s1">y(E</span><span class="s4">i</span><span class="s1">)</span></td>
